<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.QNotes.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--    screen background-->
    <style name="backgroundColor">
        <item name="android:background">@color/black</item>
    </style>
    <style name="text">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="actionBar">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="searchBar">
        <item name="cardBackgroundColor">#161616</item>
    </style>
    <style name="view">
        <item name="android:background">#161616</item>
    </style>
    <style name="button1">
        <item name="android:background">#161616</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>